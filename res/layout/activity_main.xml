<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.48" >

        <TextView
            android:id="@+id/textView_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Spinner_expense_type"
            android:layout_alignLeft="@+id/textView_location"
            android:text="Type"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/Spinner_expense_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText_cost"
            android:layout_alignParentTop="true"
            android:layout_marginTop="36dp"
            tools:listitem="@android:layout/simple_spinner_item" />

        <EditText
            android:id="@+id/editText_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/button_save"
            android:layout_below="@+id/Spinner_expense_type"
            android:layout_marginTop="10dp"
            android:ems="10" />

        <TextView
            android:id="@+id/textView_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText_location"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:text="Location"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/editText_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_cost"
            android:layout_alignLeft="@+id/editText_location"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="0.00" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_location"
            android:layout_below="@+id/textView_location"
            android:layout_marginTop="16dp"
            android:text="Cost"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="66dp"
            android:layout_marginRight="61dp"
            android:onClick="saveExpense"
            android:text="Save Expense" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText_cost"
            android:layout_alignRight="@+id/editText_cost"
            android:layout_below="@+id/editText_cost"
            android:layout_marginTop="23dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_date"
            android:layout_alignBottom="@+id/text_date"
            android:layout_alignRight="@+id/textView_type"
            android:text="Date"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/button_change_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_date"
            android:layout_centerVertical="true"
            android:onClick="showDatePickerDialog"
            android:text="Change Date" />
    </RelativeLayout>

</TableLayout>